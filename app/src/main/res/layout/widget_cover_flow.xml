<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_conver_flow"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:clipChildren="false" />

    <com.snow.yiping.customervierpagerslidingdemo.widget.pageindicator.PageIndicatorView
        android:id="@+id/pageIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp_conver_flow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        attrs:piv_animationType="slide"
        attrs:piv_radius="4dp"
        attrs:piv_selectedColor="#E12657"
        attrs:piv_unselectedColor="#E499A8" />

</RelativeLayout>